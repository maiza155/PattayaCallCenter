<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context="com.pattaya.pattayacallcenter.guest.OrganizeMemberListActivity"
    android:orientation="vertical">
    <Button
        style="@style/actionbar_text_header_style"
        android:id="@+id/btn_count"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginBottom="10dp"
        android:background="@color/brownColor"
        android:drawableLeft="@drawable/asset_icon_normal_department"
        android:gravity="left|center"
        android:paddingLeft="20dp"
        android:text=" สำนักงานตำรวจ"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/horizontal_margin"
        android:paddingRight="@dimen/horizontal_margin"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/txt_search"
            style="@style/edittext_style"
            android:hint="@string/org_name"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/ic_search" />
        <ListView
            android:id="@+id/listViewData"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:divider="#d9d9d9"
            android:dividerHeight="0dp"
            android:choiceMode="singleChoice"
            android:listSelector="@drawable/list_member_select_event" >
        </ListView>
        </LinearLayout>

</LinearLayout>
