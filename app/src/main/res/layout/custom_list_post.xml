<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <LinearLayout
            android:id="@+id/layout_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="horizontal">

            <com.pattaya.pattayacallcenter.customview.RoundedImageView
                android:id="@+id/pic_logoAdapter"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:src="@drawable/com_facebook_profile_picture_blank_portrait" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_name"
                    style="@style/text_header_list_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingTop="5dp"
                    android:text="header" />

                <TextView
                    android:id="@+id/txt_dateTime"
                    style="@style/date_sub_list_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="10 มกรา 2558 เวลา 12.00 น." />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/txt_resultDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:padding="5dp"
            android:text="ศูนย์อำนวยการแก้ไขปัญหาเรื่องราวร้องทุกข์ได้ดำเนินการแก้ไขปัญหาดังกล่าวเรียบร้อยแล้ว"
            android:textColor="@color/grayDarkColor" />

        <TextView
            android:id="@+id/txt_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="15dp"
            android:text="...see more..."
            android:textColor="@color/grayColor"
            android:textSize="18dp"
            android:textStyle="italic"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/com_facebook_profile_picture_blank_portrait" />

            <ImageView
                android:id="@+id/image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/com_facebook_profile_picture_blank_portrait" />
        </LinearLayout>

        <View
            android:id="@+id/dview"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/grayLightColor" />

        <TextView
            android:id="@+id/txt_image_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="View More .."
            android:textColor="@color/grayColor"
            android:textSize="20dp"
            android:textStyle="italic"

            />

    </LinearLayout>

    <ImageView
        android:id="@+id/btn_edit"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:src="@drawable/asset_icon_section_collapse_gray" />

</RelativeLayout>