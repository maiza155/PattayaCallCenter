<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/horizontal_margin"
    android:paddingRight="@dimen/horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pattaya.pattayacallcenter.member.CaseAdvanceSearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/text_header_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="@string/promptAction" />

        <Spinner
            android:id="@+id/spn_action"
            style="@style/spinner_style"
            android:entries="@array/array_Action"
            android:prompt="@string/promptAction" />

        <TextView
            style="@style/text_header_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="@string/promptDue" />

        <Spinner
            android:id="@+id/spn_due"
            style="@style/spinner_style"
            android:entries="@array/array_Due"
            android:prompt="@string/promptDue" />

        <TextView
            style="@style/text_header_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="@string/search" />

        <EditText
            android:id="@+id/txt_search"
            style="@style/edittext_style"
            android:hint="@string/title_search_case"
            android:inputType="text"
            android:singleLine="true" />

        <Button
            android:id="@+id/btn_search"
            style="@style/button_style"
            android:layout_marginTop="20dp"
            android:background="@color/greenDarkColor"
            android:drawableRight="@drawable/abc_ic_search_api_mtrl_alpha"
            android:text="@string/search" />

    </LinearLayout>

</RelativeLayout>
