<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/horizontal_margin"
    android:paddingRight="@dimen/horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pattaya.pattayacallcenter.share.ChangePasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txt_oldPassword"
            style="@style/edittext_style"
            android:ems="10"
            android:hint="@string/old_pass"
            android:inputType="textPassword"
            android:singleLine="true" />

        <EditText
            android:id="@+id/txt_newPassword"
            style="@style/edittext_style"
            android:hint="@string/new_pass"
            android:inputType="textPassword"
            android:singleLine="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="5dp"
            android:text="*ระบุอย่างน้อย 6 อักขระ สามารถระบุเป็นตัวเลข ตัวอักษรภาษาอังกฤษพิมพ์เล็กและพิมพ์ใหญ่เท่านั้น"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/txt_renewPassword"
            style="@style/edittext_style"
            android:hint="@string/confirm_pass"
            android:inputType="textPassword"
            android:singleLine="true" />

        <Button
            android:id="@+id/btn_save"
            style="@style/button_style"
            android:layout_marginTop="20dp"
            android:background="@color/greenDarkColor"
            android:drawableRight="@drawable/asset_icon_normal_edit"
            android:text="@string/change_pass" />
    </LinearLayout>

</RelativeLayout>
